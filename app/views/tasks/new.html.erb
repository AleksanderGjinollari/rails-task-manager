<h1>Add task</h1>

<%= form_for @task do |f| %>
  <div class="form-group title-class">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group title-class-b">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary button-new' %>
<% end %>
